    For Each File In Dir(origen)
      '  Print file
      
      comando = "mv \"" & origen & "/" & file & "\" \"" & destino & "/" & file & "\""
      Try Shell comando Wait
    Next
  Endif
  
  Return True 'todo ha ido bien
Catch
