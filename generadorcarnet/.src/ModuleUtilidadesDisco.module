End

Public Sub extraedesdebarra(ruta As String) As String
  
  Dim a As Integer
  Dim letra As String
  Dim cadena As String
  
  For a = Len(ruta) To 1 Step -1
    letra = Mid$(ruta, a, 1)
    If letra = "/" Then 
      Return cadena
    Else
      cadena = letra & cadena
    Endif
    
  Next
Catch
  ModuleMensajeError.SistemaDescripcionError()
  
End

Public Sub extraeExtension(ruta As String) As String
  
  Dim a As Integer
  Dim letra As String
  Dim cadena As String
  
  For a = Len(ruta) To 1 Step -1
    letra = Mid$(ruta, a, 1)
    If letra = "." Then 
      Return cadena
    Else
      cadena = letra & cadena
    Endif
    
  Next
Catch
  ModuleMensajeError.SistemaDescripcionError()
  
End

