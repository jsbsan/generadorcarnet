Public Sub Text() As String

  Dim cadena As String

  cadena = hfoto & "\n"
  cadena &= hnombre & "\n"
  cadena &= hApellidos & "\n"
  cadena &= hFechaNacimiento & "\n"
  cadena &= hcurso & "\n"
  cadena &= hcentro & "\n"
  cadena &= hlocalidad & "\n"
  cadena &= hNumeroCarnet & "\n"
  cadena &= Replace(htag, "\n", "") & "\n"
  cadena &= hid & "\n"

  Return cadena

End
